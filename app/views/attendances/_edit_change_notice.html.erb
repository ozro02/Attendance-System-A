<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header" style="border:none">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= form_with(model: @user, url: update_change_notice_user_attendances_path(@user), local: true, method: :patch) do |f| %>
        <% @attendances.each do |user_id, attendances| %>
          <h4 class="modal-title center">【<%= User.find(user_id).name %>からの勤怠変更申請】</h4>
          <table class="table table-bordered table-condensed table-hover" id="table-attendances">
            <thead>
              <tr>
                <th rowspan="3">日付</th>
                <th rowspan="3">曜日</th>
                <th colspan="4">変更前</th>
                <th colspan="4">変更後</th>
                <th rowspan="3">備考</th>
                <th rowspan="3">指示者確認㊞</th>
                <th rowspan="3">変更</th>
                <th rowspan="3">勤怠を確認する</th>
              </tr>
              <tr>
                <th colspan="2">出社</th>
                <th colspan="2">退社</th>
                <th colspan="2">出社</th>
                <th colspan="2">退社</th>
              </tr>
              <tr>
                <th>時</th>
                <th>分</th>
                <th>時</th>
                <th>分</th>
                <th>時</th>
                <th>分</th>
              </tr>
            </thead>
            <% attendances.each do |day| %>
              <%= f.fields_for "attendances[]", day do |d| %>
                <tbody>
                  <tr>
                    <td><%= l(day.worked_on, format: :short) %></td>
                    <td><%= $days_of_the_week[day.worked_on.wday] %></td>
                    <td><%= day.started_at.strftime("%H") %></td>
                    <td><%= day.started_at.strftime("%M") %></td>
                    <td><%= day.finished_at.strftime("%H") %></td>
                    <td><%= day.finished_at.strftime("%M") %></td>
                    <td><%= day.started_at.strftime("%H") %></td>
                    <td><%= day.started_at.strftime("%M") %></td>
                    <td><%= day.finished_at.strftime("%H") %></td>
                    <td><%= day.finished_at.strftime("%M") %></td>
                    <td><%= day.note %></td>
                    <td><%= d.select :judgement, Attendance.judgements.keys.to_a, {include_blank: true} %></td>
                    <td><%= d.check_box :change, {}, true, false %></td>
                    <td><%= link_to "確認", confirmation_show_user_path(User.find(user_id)), method: :get, class: "btn btn-primary" %></td>
                  </tr>
                </tbody>
              <% end %>
            <% end %>
          </table>
        <% end %>
        <div class="center">
          <%= f.submit yield(:button_text), class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>