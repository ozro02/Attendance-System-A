<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <h4 class="modal-title center">【の残業申請】</h4>
        <%= form_with(model: @user, url: update_overwork_notice_user_attendances_path(@user), local: true, method: :patch) do |f| %>
            <table class="table table-bordered table-condensed table-hover" id="table-attendances">
              <thead>
                <tr>
                  <th>日付</th>
                  <th>曜日</th>
                  <th>終了予定時間</th>
                  <th>指定勤務終了時間</th>
                  <th>時間外時間</th>
                  <th>業務処理内容</th>
                  <th>指示者確認㊞</th>
                  <th>変更</th>
                  <th>勤怠を確認する</th>
                </tr>
              </thead>
              <% @attendances.each do |attendance| %>
              <tbody>
                <tr>
                  <td><%= l(attendance.worked_on, format: :short) %></td>
                  <td><%= $days_of_the_week[attendance.worked_on.wday] %></td>
                  <td><%= attendance.scheduled_end_time.strftime("%H:%M") %></td>
                  <td><%= @user.designated_work_end_time.strftime("%H:%M") %></td>
                  <td><%= overworking_times(attendance.scheduled_end_time.floor_to(15.minutes), @user.designated_work_end_time.floor_to(15.minutes), attendance.next_day) %></td>
                  <td><%= attendance.try(:business_process) %></td>
                  <td><%= f.select :judgement, Attendance.judgements.keys.to_a, {include_blank: true} %></td>
                  <td><%= f.check_box :next_day, {}, true, false %></td>
                  <td></td>
                 </tr>
               </tbody>
               <% end %>
             </table>
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
    </div>
  </div>
</div>