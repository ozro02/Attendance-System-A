<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">【残業申請】</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @user, url: attendances_update_overwork_request_path(params[<:day.worked_on]), local: true, method: :patch) do |f| %>
            <table class="table table-bordered table-condensed table-hover" id="table-attendances">
              <thead>
                <tr>
                  <th>日付</th>
                  <th>曜日</th>
                  <th>終了予定時間</th>
                  <th>翌日</th>
                  <th>業務処理内容</th>
                  <th>指示者確認㊞</th>
                </tr>
                
              <tbody>
                <% @attendances.each do |day| %>
                  <%= f.fields_for "attendances[]",day do |attendance| %>
                    <td><%= l(@day, format: :short) %></td>
                    <% if @day.wday == 6 %>
                      <td class="sat"><%= $days_of_the_week[@day.wday] %></td>
                    <% elsif @day.wday == 0 %>
                      <td class="sun"><%= $days_of_the_week[@day.wday] %></td>
                    <% else %>
                      <td><%= $days_of_the_week[@day.wday] %></td>
                    <% end %>
                    <td><%= attendance.time_field :scheduled_end_time, class: "form-control" %></td>
                    <td><%= attendance.check_box :next_day, id="next_day" %></td>
                    <td><%= attendance.text_field :business_process, class: "form-control" %></td>
                    <td><%= attendance.select :confirmation, class: "form-control" %></td>
                  <% end %>
                <% end %>
              </tbody>

            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>