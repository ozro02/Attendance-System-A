<% provide(:title, 'All Users') %>

<% if params[:search].present? %>
  <h1>検索結果</h1>
<% else %>
  <h1>ユーザー一覧</h1>
<% end %>

<!--  検索拡張機能  -->
<div class="row">
  <div class="col-md-4 col-md-offset-8" >
    <p class="search-logo" >ユーザー名検索</p>
    <%= form_tag(users_path, :method => 'get' ) do %>
        <%= text_field_tag :search, "", placeholder: "キーワードを入力..." %>
          <%= submit_tag '検索', :name => nil, class:"btn-primary" %>
    <% end %>
  </div>
</div>

<table class="table table-condensed table-hover" id="table-users">
  <% @users.each do |user| %>
  <div class="row">
    <tr>
      <%= user.name %><br>
      <td class="center">
      |
      <%= link_to "削除", user, method: :delete,
              data: { confirm: "削除してよろしいですか？" }, class: "btn btn-primary" %>
      </td>
    </tr>
  </div>
</table>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">
      <button type="button" class="btn btn-lg btn-primary" data-toggle="collapse" data-target="#collapseExample">編集</button>
    </h4>    
  </div>
  <div class="collapse" id="collapseExample">
    <div class="panel-body">
      <div class="col-md-6 col-md-offset-3">
        <%= render 'form',{user: user} %>
      </div>
    </div>  
  </div>
  <% end %>
