<% provide(:title, 'All Users') %>

<% if params[:search].present? %>
  <h1>検索結果</h1>
<% else %>
  <h1>ユーザー一覧</h1>
<% end %>

<!--  検索拡張機能  -->
<div class="row">
  <div class="col-md-4 col-md-offset-8" >
    <p class="search-logo" >ユーザー名検索</p>
    <%= form_tag(users_path, :method => 'get' ) do %>
        <%= text_field_tag :search, "", placeholder: "キーワードを入力..." %>
          <%= submit_tag '検索', :name => nil, class:"btn-primary" %>
    <% end %>
  </div>
</div>

  <%= will_paginate %>
  <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <% @users.each do |user| %>
      <tr>
        <td>
        <%= user.name %>
        </td>
        <td class="center">
          <% if current_user.admin? && !current_user?(user) %>
            <%= link_to "編集", edit_basic_info_user_path(user), remote: true, class: "btn btn-primary" %>
            <%= link_to "削除", user, method: :delete,
                data: { confirm: "削除してよろしいですか？" }, class: "btn btn-primary" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate %>
</div>

<!--モーダルウインドウ表示-->
<div id="edit-basic-info" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>